import 'package:flutter/material.dart';
import 'package:provider/provider.dart';

class PantallaConfiguracion extends StatelessWidget {
  const PantallaConfiguracion({Key? key}) : super(key: key);

  void _showAboutDialog(BuildContext context) {
    showDialog(
      context: context,
      builder: (context) => AboutDialog(
        applicationIcon: FlutterLogo(),
        applicationLegalese: 'Legalese',
        applicationName: 'Calculadora Programacion Avanzada',
        applicationVersion: 'version 1.0.0',
        children: [
          Text('Grupo: Davila, Maliza y Tinitana'),
        ],
      ),
    );
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text('Configuraciones'),
      ),
      body: ListView(
        children: [
          ListTile(
            title: const Text('Acerca de la aplicacion'),
            onTap: () => _showAboutDialog(context),
          ),
        ],
      ),
    );
  }
}

